= form_for @monster_instance do |f|
  - if @monster_instance.errors.any?
    #error_explanation
      %h2= "#{pluralize(@monster_instance.errors.count, "error")} prohibited this monster_instance from being saved:"
      %ul
        - @monster_instance.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :health
    = f.number_field :health
  .field
    = f.label :location
    = f.number_field :location
  .actions
    = f.submit 'Save'
