= form_for @junction do |f|
  - if @junction.errors.any?
    #error_explanation
      %h2= "#{pluralize(@junction.errors.count, "error")} prohibited this junction from being saved:"
      %ul
        - @junction.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :floor_id
    = f.collection_select :floor_id, Floor.all, :id, :name
  .field
    = f.label :destination_id
    = f.collection_select :destination_id, Floor.all, :id, :name
  .actions
    = f.submit 'Save'
