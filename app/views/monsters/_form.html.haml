= form_for @monster do |f|
  - if @monster.errors.any?
    #error_explanation
      %h2= "#{pluralize(@monster.errors.count, "error")} prohibited this monster from being saved:"
      %ul
        - @monster.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :ability
    = f.text_field :ability
  .field
    = f.label :life
    = f.number_field :life
  .field
    = f.label :attacks_id
    = f.number_field :attacks_id
  .field
    = f.label :position
    = f.number_field :position
  .actions
    = f.submit 'Save'
